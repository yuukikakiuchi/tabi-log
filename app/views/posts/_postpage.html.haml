          -# .Mainpost__inputmediumarea
          -#   = f.select :medium_area, [["北海", "北海"], ["屋内", "屋内"], ["アミューズメント", "アミューズメント"],["遺跡", "遺跡"],["城", "城"], ["飲食", "飲食"], ["お酒", "お酒"]], {include_blank: "地方選んで下さい"}, {class: 'formbox'}
            -# = f.collection_select :medium_area, @prefectures, :name, :name,  { prompt: "都道府県を選んで下さい" }, class: 'formbox'
          .Mainpost__inputcoment
            = f.text_area :content, class: 'Mainpost__comment', placeholder: 'コメントを入力して下さい'
          .Mainpost__level
            = f.select :level, [["★", "★"], ["★★", "★★"], ["★★★", "★★★"], ["★★★★", "★★★★"], ["★★★★★", "★★★★★"]], {include_blank: "ソロ活難易度を教えて下さい"}, {class: 'formbox'}

      .Checkgroup
        .Checkbox
          %ul.Checkbox__check
