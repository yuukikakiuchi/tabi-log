            = f.file_field :image, class: 'Mainpost＿＿image'





          -# = f.file_field :image, class: 'Mainpost__image'
        .Mainpost__boxright
          .Mainpost__inputname
            = f.text_field :areaname, placeholder: 'スポット名を入力して下さい', class: 'formbox'
